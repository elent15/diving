doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport",
    content="width=device-width, initial-scale=1.0")
    title ruDive
    link(rel="stylesheet" href="./css/vendor.css")
    link(rel="stylesheet" href="./css/main.css")
    script(defer src="./js/vendor.js")
    script(defer src="./js/main.js")
