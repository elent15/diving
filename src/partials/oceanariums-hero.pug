section.page-hero.oceanariums-hero
  video.oceanariums-hero__video(src='./resources/oceanariums-1.mp4', autoplay, playsinline, poster='./images/oceanariums-hero-bg-1.webp')
  .container.page-hero__container.oceanariums-hero__container
    .breadcrumbs
      ul.list-reset.breadcrumbs__list
        li.breadcrumbs__item
          a.link.breadcrumbs__link(href="./index.html") Главная
        li.breadcrumbs__item Дайвинг в Океанариумах
    .page-hero__content.oceanariums-hero__content
      h2.second-title.page-hero__title.oceanariums-hero__title Дайвинг в океанариумах
      .oceanariums-hero__cards-block
        .oceanariums-hero__card.oceanariums-hero__card--active
          picture
            source(srcset='./images/oceanariums-hero-1.webp', type="image/webp")
            img(src='./images/oceanariums-hero-1.png', alt="Дайвинг в океанариуме")
          button.btn-reset.oceanariums-hero__play-btn(type="button")
            svg
              use(href="./images/sprite.svg#pleer")
