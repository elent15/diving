<!-- модальное окно "Купить сертификат" -->
-
  const modalCertificate = [
      '«Открытие дайвинга»',
      '«Открытие дайвинга в Океанариуме»',
      '«Пресноводный мир Крокус Сити Океанариума»',
      '«Московские акулы»',
      '«Под воду – с друзьями!»',
      '«Дайвинг-стиль»',
      '«Зима-2024»',
      '«Романтика»',
    ]
.modal(id="modal-certificate")
  .modal__bg
    .modal__body.modal-certificate(data-simplebar)
      button.btn-reset.modal__close-btn(type="button")
        svg
          use(xlink:href="./images/sprite.svg#close")
      a.link.modal__logo-link.modal-certificate__logo-link
        img.logo(src="./images/svg/logo.svg" alt="Логотип")
      form.modal-certificate__form
        .modal-certificate__form-block
          h4.fourth-title.modal-certificate__title Выберите сертификат
          .modal-certificate__cards-block
            for title, index in modalCertificate
              if index == 1
                button.btn-reset.modal-certificate__card.modal-certificate__card--active.focus(type='button')
                  picture.modal-certificate__card-img-block
                    source(srcset=`./images/modal-certificate.webp`, type="image/webp")
                    img(src=`./images/modal-certificate.jpg`, alt="Фото")
                  span.modal-certificate__card-title= title
              else
                button.btn-reset.modal-certificate__card(type='button')
                  picture.modal-certificate__card-img-block
                    source(srcset=`./images/modal-certificate.webp`, type="image/webp")
                    img(src=`./images/modal-certificate.jpg`, alt="Фото")
                  span.modal-certificate__card-title= title
        .modal-certificate__form-block
          h4.fourth-title.modal-certificate__title Напишите свое поздравление
          label.modal-certificate__label
            textarea.input.modal-certificate__input.modal-certificate__textarea(placeholder='Сообщение на сертификат')
        .modal-certificate__form-block
          h4.fourth-title.modal-certificate__title Выберите номинал сертификата
          .modal-certificate__form-btns
            for value, index in ['10 000 ₽', '15 000 ₽', '30 000 ₽']
              if index == 0
                button.btn-reset.btn.modal-certificate__nominal-btn.modal-certificate__nominal-btn--active(type='button')= value
              else
                button.btn-reset.btn.modal-certificate__nominal-btn(type='button')= value
        .modal-certificate__form-block.modal-certificate__form-address
          .modal-certificate__form-subblock
            h4.fourth-title.modal-certificate__title Кому отправить подарок
            label.modal-certificate__label
              input.input.modal-certificate__input(type='text' placeholder='ФИО')
          .modal-certificate__form-subblock
            label.modal-certificate__label
              input.input.modal-certificate__input(type='tel' placeholder='Контактный телефон')
          .modal-certificate__form-subblock
            h4.fourth-title.modal-certificate__title Способ отправки
            label.modal-certificate__label
              input.input.modal-certificate__input(type='email' placeholder='E-mail')
          .modal-certificate__form-subblock
            h4.fourth-title.modal-certificate__title Способ оплаты
            label.modal-certificate__label
              input.input.modal-certificate__input(type='text' placeholder='Банковская карта')
        .modal-certificate__form-block.modal-certificate__form-price
          h4.fourth-title.modal-certificate__title Стоимость сертификата
          for value, index in {'Стоимость сертификата:' : '10 000 ₽', 'Скидка:' : '10 %', 'К оплате:' : '9 000 ₽'}
            .modal-certificate__item
              span.modal-certificate__item-name= index
              span.modal-certificate__item-value= value
        .modal-certificate__form-block.modal-certificate__bottom-form-block
          label.form-label-checkbox
            input.form-input-checkbox(type="checkbox")
            span.form-checkbox
            span.form-label-checkbox-text Нажимая "Оплатить", я соглашаюсь с условиями&nbsp;
              a.policy-link.modal-certificate__link(href="#") пользовательского соглашения
              |&nbsp;и&nbsp;
              a.policy-link.modal-certificate__link(href="#") политики конфиденциальности
          button.btn-reset.btn.modal-certificate__form-btn.btn-js(type='submit') Оплатить
