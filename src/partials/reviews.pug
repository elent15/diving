section.reviews
  .container-fluid
    h3.third-title.numbered-title.reviews__title Отзывы о нашем клубе
    .swiper.reviews__swiper
      .reviews__swiper-top
        .reviews__text С нами в клубе состоят как любители, так и профессионалы дайвинга России.
        .reviews__swiper-top-btns
          button.btn-reset.swiper-button-prev.reviews__swiper-button-prev(type="button")
            svg.prev
              use(href="./images/sprite.svg#next")
            svg.prev-active
              use(href="./images/sprite.svg#next-active")
          button.btn-reset.swiper-button-next.reviews__swiper-button-next(type="button")
            svg.next
              use(href="./images/sprite.svg#next")
            svg.next-active
              use(href="./images/sprite.svg#next-active")
      .swiper-wrapper
        for slide, index in reviewsSlides
          .swiper-slide.reviews__swiper-slide
            .reviews__card
              .reviews__card-text= slide.text
              .reviews__card-bottom
                .reviews__card-img-block
                  picture
                    source(srcset=`./images/reviews-${index + 1}.webp`, type="image/webp")
                    img(src=`./images/reviews-${index + 1}.jpg`, alt="Фото")
                .reviews__card-info
                  span.reviews__card-author= slide.author
                  span.reviews__card-section Направление:&nbsp;
                  span.reviews__card-section.reviews__card-section-name= slide.section
      .reviews__swiper-bottom-btns
          button.btn-reset.swiper-button-prev.reviews__swiper-button-prev(type="button")
