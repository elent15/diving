-
  const registrationCards = [
    {icon: 'pin', title: 'Приехать в офис по адресу:', text: 'Центр дизайна ARTPLAY (ул. Нижняя Сыромятническая, 10), здание 9, этаж 3, пространство № 335'},
    {icon: 'call', title: 'Позвонить по телефону', text: '+7 (495) 925-77-99'},
    {icon: 'email', title: 'Отправить e-mail', text: 'Отправить электронное письмо нашему менеджеру'},
    {icon: 'press-button', title: 'Отправить заявку с сайта', text: 'Заполнить электронную форму прямо на нашем сайте'},
    {icon: 'smartphone', title: 'Написать в соц сети', text: 'Написать о своих пожеланиях на наших страницах в социальных сетях Телеграм, Вконтакте.'},
