<!-- модальное окно "Купить" -->
-
  const buyForm = [
    {type: 'text', placeholder: 'Имя'},
    {type: 'text', placeholder: 'Фамилия'},
    {type: 'email', placeholder: 'E-mail'},
    {type: 'tel', placeholder: 'Телефон'},
    {type: 'text', placeholder: 'Сумма'},
    {type: 'text', placeholder: 'Банковская карта'},
  ];

.modal(id="modal-buy")
  .modal__bg
    .modal__body.modal-book(data-simplebar)
      button.btn-reset.modal__close-btn(type="button")
        svg
          use(xlink:href="./images/sprite.svg#close")
      a.link.modal__logo-link.modal-book__logo-link(href="#")
        img.logo(src="./images/svg/logo.svg" alt="Логотип" width="103" height="65")
      span.modal-book__title
      form.modal-book__form
        for item, index in buyForm
          label.modal__form-label
            input.input.modal__form-input(class=(index === 0) ? "focus" : "", type=item.type, placeholder=item.placeholder)
        .modal-book__bottom-form-block
          label.form-label-checkbox
            input.form-input-checkbox(type="checkbox")
            span.form-checkbox
            span.form-label-checkbox-text Нажимая "Купить", я соглашаюсь с условиями&nbsp;
              a.policy-link.modal-book__link(href="#") пользовательского соглашения
              |&nbsp;и&nbsp;
              a.policy-link.modal-book__link(href="#") политики конфиденциальности
          button.btn-reset.btn.modal-book__form-btn.btn-js(type='submit') Купить
